{
  "levels": {
    "success": {
      "badge": "✅️",
      "label": "success",
      "labelColor": [ "green" ],
      "format": [ "level", "id", "message" ]
    },

    "start": {
      "badge": "🚀",
      "labelColor": ["yellow"],
      "format": [ "level", "message" ]
    },

    "end": {
      "badge": "🛑",
      "labelColor": ["red"],
      "format": [ "level", "message" ]
    },

    "info": {
      "badge": "💬",
      "labelColor": ["blue"],
      "format": ["level", "id", "fileName", "message"]
    },

    "warn": {
      "badge": "⚠️ ",
      "label": "warning",
      "labelColor": ["yellow"],
      "format": ["level", "id", "fileName", "message"]
    },

    "trace": {
      "badge": "⚡️",
      "labelColor": ["blue"],
      "format": ["level", "id", "fileName", "timeDiffInit",  "timeDiffScope", "just:-", "scope", "message"]
    },

    "error": {
      "badge": "🔥",
      "labelColor": ["red"],
      "format": ["level", "id", "fileName", "message", "just:-", "error"]
    },

    "access": {
      "format": [ "just:🚦 ", "access", "id", "access-log" ]
    },

    "summary": {
      "badge": "🞺",
      "label": "summary",
      "labelColor": "bold",
      "format": [ "level", "summary" ]
    },

    "zipkin": {
      "components": {
        "id": { "displayFormat": "%s", "displayShortId": 12, "color": "dim" },
        "access": { "displayFormat": "%s", "displayMethod": true, "displayStatus": true, "minimumWidth": 10 },
        "access-log": { "format": ":remoteEndpoint - :url :statusCode - :duration_µs" },
        "map": {
          "displayFormat": " %s ",
          "properties": {
            "cache": {
              "HIT": { "color": [ "bold","bgWhite", "black" ], "text": "👊 HIT" },
              "MISS": { "color": "dim", "text": "💨 MISS" }
            }
          }
        }
      },
      "badge": "🛰",
      "label": "",
      "labelColor": "blue",
      "format": [ "just:          ", "zipkin-level", "access", "map:cache", "access-log", "just:-",  "id:parent",  "just:|",  "id:scope" ]
    }
  },

  "components": {
    "id": {
      "color": "grey",
      "displayShortId": 8,
      "displayFormat": "[%s]"
    },

    "fileName": {
      "underline": true,
      "displayFileName": false,
      "displayFormat": "@%s"
    },

    "error": {
      "color": "dim",
      "displayStackTrace": true,
      "displayFullStackTrace": false
    },

    "message": {
      "properties": [ "msg", "message", "text" ]
    },
    
    "level": {
      "minimumWidth": 20,
      "alignment": "left",
      "underline": true,
      "uppercase": false,
      "displayFormat": "%s │"
    },

    "zipkin-level": {
      "minimumWidth": 0,
      "alignment": "right",
      "clientIcon": "🛰",
      "serverIcon": "📡",
      "serverFormat": " ┕━ %s ",
      "clientFormat": " ┝━ %s "
    },

    "scope": {
      "color": [ "dim" ],
      "alignment": "left",
      "displayFormat": "[%s]",
      "uppercase": false,
      "underline": false,
      "italic": false
    },

    "timeDiffInit": {
      "defaultReturn": "0ms",
      "color": [ "magenta" ],
      "minimumWidth": 10,
      "alignment": "right"
    },

    "timeDiffScope": {
      "color": [ "blue" ],
      "defaultReturn": "0ms",
      "minimumWidth": 8,
      "alignment": "right"
    },

    "access": {
      "minimumWidth": 7,
      "displayFormat": "%s └",
      "displayMethod": false,
      "displayStatus": true,
      "color": [ ],
      "statusMap": {
        "200-300": { "color": ["green"], "badge":  "✔" },
        "300-400": { "color": ["blue"], "badge": "←" },
        "400-500": { "badge": "⚠" },
        "500-1000": { "color": ["red"], "badge": "✖" }
      }
    },

    "access-log": {
      "format": ":method :host :path :statusCode :length - :responseTime_ms - :statusMessage"
    },

    "json": {
      "humanReadable": false,
      "properties": [ "id", "errors" ],
      "defaultProperties": [ "req", "res" ]
    }

  },

  "outputs": [
    {
      "type": "console"
    }
  ]
}